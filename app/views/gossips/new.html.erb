<div class="container">
  <div class="row">

    <div class="col text-center">
      <h2>Entre ton dernier potin</h2>
    </div>

    <div class="col-12">
        <div class="form-group">
          <%= form_tag url_for(action: 'create'), method: "post" do %>

            <%= label_tag 'Title' %>
            <%= text_field_tag 'title', @gossip.title, class: 'form-control' %>

            <br /> <br />
                
            <%= label_tag 'Content' %>
            <%= text_area_tag 'content', @gossip.content, class: 'form-control' %>

            <br /> <br />
                
            <%= submit_tag "Create Gossip", class: 'btn btn-success' %>
          <% end %>
        </div>


        <!-- affiche les erreurs qui empêchent la création du nouveau potin -->
        <% if @gossip.errors.any? %>
          <div class="alert alert-warning mt-2" role="alert">
            <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
              <ul>
                <% @gossip.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
              <p>Merci de réessayer</p>
        <% end %>
      </div>
    </div>
  </div>
</div>